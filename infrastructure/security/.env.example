# PodcastFlow Pro Environment Configuration Template
# Copy this file to .env and fill in the values
# DO NOT commit .env files to version control

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
PORT=3000

# ==========================================
# Database Configuration
# ==========================================
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://podcastflow:your_password_here@localhost:5432/podcastflow_development

# Connection pool settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=5000

# ==========================================
# Authentication & Security
# ==========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here
JWT_SECRET=your-jwt-secret-here

# Session configuration
SESSION_DURATION_HOURS=8
SESSION_RENEWAL_THRESHOLD_MINUTES=30

# Password policy
PASSWORD_MIN_LENGTH=12
REQUIRE_PASSWORD_UPPERCASE=true
REQUIRE_PASSWORD_NUMBERS=true
REQUIRE_PASSWORD_SYMBOLS=true

# ==========================================
# AWS Configuration
# ==========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# S3 Buckets
MEDIA_BUCKET_NAME=podcastflow-media-dev
BACKUPS_BUCKET_NAME=podcastflow-backups-dev
LOGS_BUCKET_NAME=podcastflow-logs-dev

# AWS Secrets Manager (Production)
AWS_SECRETS_MANAGER_REGION=us-east-1
AWS_SECRETS_PREFIX=podcastflow-pro

# ==========================================
# Email Configuration (AWS SES)
# ==========================================
EMAIL_FROM=noreply@podcastflow.pro
EMAIL_REPLY_TO=support@podcastflow.pro
EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
EMAIL_PORT=587
EMAIL_USER=your-ses-smtp-username
EMAIL_PASSWORD=your-ses-smtp-password
EMAIL_USE_TLS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# ==========================================
# API Rate Limiting
# ==========================================
# Rate limit window in milliseconds
API_RATE_WINDOW=900000
# Requests per window
API_RATE_LIMIT=100
# Rate limit per tenant
API_RATE_LIMIT_PER_TENANT=1000
# Burst allowance
API_RATE_BURST=20

# ==========================================
# Monitoring & Logging
# ==========================================
LOG_LEVEL=info
ENABLE_CLOUDWATCH_LOGS=false
ENABLE_DEBUG_PAGES=false
ENABLE_SLOW_QUERY_LOG=true
SLOW_QUERY_THRESHOLD_MS=1000

# Sentry (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ==========================================
# Redis Configuration (for sessions/caching)
# ==========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS_ENABLED=false
CACHE_TTL_SECONDS=3600

# ==========================================
# Feature Flags
# ==========================================
ENABLE_MOCK_DATA=false
ENABLE_MAINTENANCE_MODE=false
ENABLE_BETA_FEATURES=false
ENABLE_ANALYTICS_TRACKING=false

# ==========================================
# Third-party Integrations
# ==========================================
# QuickBooks
QUICKBOOKS_CLIENT_ID=
QUICKBOOKS_CLIENT_SECRET=
QUICKBOOKS_REDIRECT_URI=http://localhost:3000/api/quickbooks/callback
QUICKBOOKS_ENVIRONMENT=sandbox

# YouTube Analytics
YOUTUBE_API_KEY=
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# Megaphone
MEGAPHONE_API_KEY=
MEGAPHONE_API_SECRET=
MEGAPHONE_BASE_URL=https://api.megaphone.fm

# ==========================================
# CORS Configuration
# ==========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==========================================
# Backup Configuration
# ==========================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# ==========================================
# Multi-tenant Configuration
# ==========================================
DEFAULT_TENANT_SCHEMA_PREFIX=org_
MAX_TENANTS_PER_DATABASE=100
TENANT_ISOLATION_MODE=schema

# ==========================================
# Performance Tuning
# ==========================================
MAX_UPLOAD_SIZE_MB=100
REQUEST_TIMEOUT_MS=30000
DATABASE_STATEMENT_TIMEOUT_MS=10000
API_RESPONSE_CACHE_SECONDS=60