# Application Settings
NEXT_PUBLIC_APP_URL=https://app.podcastflow.pro
NODE_ENV=production

# Email Configuration
EMAIL_PROVIDER=smtp # or 'ses' for AWS SES
EMAIL_FROM=noreply@podcastflow.pro
EMAIL_REPLY_TO=support@podcastflow.pro

# SMTP Configuration (for Gmail, SendGrid, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AWS Configuration (for S3 and SES)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# S3 Configuration
S3_BUCKET_NAME=podcastflow-audio-uploads

# Authentication (for future implementation)
JWT_SECRET=your-jwt-secret
AUTH_PROVIDER=cognito # or 'custom'

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/podcastflow
# For production, use connection pooling:
# DATABASE_URL=postgresql://user:password@localhost:5432/podcastflow?pgbouncer=true&connection_limit=1
# DIRECT_URL=postgresql://user:password@localhost:5432/podcastflow

# Redis for caching and sessions (optional)
REDIS_URL=redis://localhost:6379

# Analytics (optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_S3_UPLOADS=true
ENABLE_REAL_TIME_UPDATES=false

# QuickBooks Integration
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_ENVIRONMENT=sandbox # or production
QUICKBOOKS_REDIRECT_URI=https://app.podcastflow.pro/api/quickbooks/callback
QUICKBOOKS_WEBHOOK_TOKEN=your-webhook-verification-token

# Cron Job Security
CRON_SECRET=your-cron-secret-key