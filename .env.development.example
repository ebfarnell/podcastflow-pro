# Development Environment Configuration Example
# Copy this file to .env.development for local development

# Database (PostgreSQL - Development)
DATABASE_URL="postgresql://podcastflow:podcastflow@localhost:5432/podcastflow_dev"

# Authentication Secret (Development)
NEXTAUTH_SECRET="development-secret-change-this-in-production"

# Environment
NODE_ENV=development
ENVIRONMENT=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AWS Configuration (Optional for local dev)
AWS_REGION=us-west-2
NEXT_PUBLIC_AWS_REGION=us-west-2

# S3 Buckets (Optional for local dev)
S3_BUCKET_NAME=podcastflow-dev-uploads
MEDIA_BUCKET_NAME=podcastflow-media-dev
BACKUPS_BUCKET_NAME=podcastflow-backups-dev

# Email Configuration (Development)
EMAIL_FROM=dev@localhost
EMAIL_HOST=localhost
EMAIL_PORT=1025  # Use mailcatcher or similar
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_TRACKING_SECRET=dev-email-tracking-secret

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000

# Feature Flags
ENABLE_MOCK_DATA=true  # Enable mock data for development
ENABLE_DEBUG_PAGES=true
ENABLE_EMAIL_NOTIFICATIONS=false  # Disable emails in dev

# Monitoring
ENABLE_CLOUDWATCH_LOGS=false
LOG_LEVEL=debug

# Rate Limiting (Relaxed for development)
API_RATE_LIMIT=100000
API_RATE_WINDOW=3600